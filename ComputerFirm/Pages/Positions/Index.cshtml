@page
@model ComputerFirm.Pages.Positions.IndexModel

@{
    ViewData["Title"] = "Должность";
}

<h1>Должность</h1>

<p>
    <a asp-page="Create">Добавить новую должность</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].PositionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].NamePosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Duties)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Requirements)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Position) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamePosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duties)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requirements)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PositionID">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.PositionID">Информация</a> |
                <a asp-page="./Delete" asp-route-id="@item.PositionID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
